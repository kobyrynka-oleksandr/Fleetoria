<local:PageWithScaling x:Class="Fleetoria.SettingsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Fleetoria"
      mc:Ignorable="d" 
      d:DesignHeight="800" d:DesignWidth="1280"
      Title="SettingsPage">

    <local:PageWithScaling.Background>
        <ImageBrush ImageSource="/Resources/Back_Ground_Main.png" Stretch="Fill" />
    </local:PageWithScaling.Background>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Border Grid.Column="1" Grid.Row="0" Grid.RowSpan="3"
        BorderThickness="3" BorderBrush="Black" Background="White"
        CornerRadius="10" Margin="10, 10">

            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Orientation="Vertical" >

                <TextBlock Text="Settings" Foreground="Black" FontSize="40" FontStyle="Italic" FontFamily="Evo 2"
                   FontWeight="Medium" Margin="0,0,0,80" TextAlignment="Center" />

                <TextBlock Text="Music Volume" Foreground="Black" FontSize="25" FontWeight="SemiBold" Margin="0,0,0,30" HorizontalAlignment="Center" />
                <Slider Minimum="0" Maximum="100" Value="50" IsSnapToTickEnabled="True"
                Height="40" Margin="0,0,0,30" Width="300"/>

                <TextBlock Text="Interaction Sounds" Foreground="Black" FontSize="25" FontWeight="SemiBold" Margin="0,0,0,30" HorizontalAlignment="Center" />
                <Slider Minimum="0" Maximum="100" Value="50" IsSnapToTickEnabled="True"
                Height="40" Margin="0,0,0,30" Width="300"/>

                <TextBlock Text="Skin Selection" Foreground="Black" FontSize="25" FontWeight="SemiBold" Margin="0,0,0,10" HorizontalAlignment="Center"/>
                <ComboBox Height="70" FontSize="18" Margin="0,0,0,10" Width="300">

                </ComboBox>

            </StackPanel>
        </Border>

        <Button x:Name="BackButton"
                Content="Back"
                Grid.Column="1"
                Grid.Row="3"
                Click="BackButton_Click"
                Style="{StaticResource FlatButtonStyle}">
            <Button.RenderTransform>
                <TranslateTransform x:Name="BtnBackTransform"/>
            </Button.RenderTransform>
        </Button>
    </Grid>
</local:PageWithScaling>
