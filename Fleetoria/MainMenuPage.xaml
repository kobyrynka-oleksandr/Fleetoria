<local:PageWithScaling x:Class="Fleetoria.MainMenuPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Fleetoria"
      mc:Ignorable="d" 
      d:DesignHeight="800" d:DesignWidth="1280"
      Title="MainMenuPage">

    <local:PageWithScaling.Background>
        <ImageBrush ImageSource="/Resources/Back_Ground_Main.png" Stretch="Fill" />
    </local:PageWithScaling.Background>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Rectangle x:Name="WhiteOverlay"
       Fill="White"
       Opacity="1"
       Panel.ZIndex="100"
       Grid.ColumnSpan="3"
       Grid.RowSpan="4"
       Visibility="Collapsed"/>

        <Image Source="/Resources/Logo_Fleetoria_2.png"
           Stretch="Uniform"
           Panel.ZIndex="0" 
           Grid.Column="0"
           Grid.ColumnSpan="3"
           HorizontalAlignment="Center"
           Margin="10,0,10,10"
           x:Name="Logo"/>

        <Button x:Name="PlayButton"
                Content="Play"
                Grid.Column="1"
                Grid.Row="1"
                Click="PlayButton_Click" 
                Style="{StaticResource FlatButtonStyle}">
        </Button>

        <Button x:Name="SettingsButton"
                Content="Settings"
                Grid.Column="1"
                Grid.Row="2"
                Click="SettingsButton_Click"
                Style="{StaticResource FlatButtonStyle}">
        </Button>

        <Button x:Name="ExitButton"
                Content="Exit"
                Grid.Column="1"
                Grid.Row="3"
                Click="ExitButton_Click"
                Style="{StaticResource FlatButtonStyle}">
        </Button>
    </Grid>
</local:PageWithScaling>
