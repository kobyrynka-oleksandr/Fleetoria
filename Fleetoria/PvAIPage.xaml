<local:PageWithScaling x:Class="Fleetoria.PvAIPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Fleetoria"
      mc:Ignorable="d" 
      d:DesignHeight="800" d:DesignWidth="1280"
      Title="PvAIPage">

    <local:PageWithScaling.Background>
        <ImageBrush ImageSource="/Resources/Back_Ground_Main.png" Stretch="Fill" />
    </local:PageWithScaling.Background>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <Grid x:Name="BattleGrid" Grid.Column="0">

            <Grid.RowDefinitions>
                <RowDefinition Height="480"/>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>

            <Border Grid.Row="0" BorderBrush="Black" BorderThickness="2" Width="400" Height="400">
                <Grid x:Name="LabeledBattleGrid" AllowDrop="True" Drop="Ship_Drop"/>
            </Border>

            <Border Grid.Row="1" 
                BorderBrush="Black" 
                BorderThickness="2" 
                Background="White" 
                CornerRadius="10"
                Margin="90,0">
                <StackPanel x:Name="ShipPanel" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Center" />
            </Border>
        </Grid>
    </Grid>
</local:PageWithScaling>
